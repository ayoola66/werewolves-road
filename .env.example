# Environment Variables Template for Netlify + Supabase

# Copy this file to .env for local development
# Add these variables to Netlify dashboard for production

# Database Configuration (Supabase)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Supabase Configuration (for Realtime features)
VITE_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
VITE_SUPABASE_ANON_KEY=[YOUR-ANON-KEY]

# Node Environment
NODE_ENV=production

# Optional: Sentry Configuration (if using error tracking)
SENTRY_DSN=

# Optional: Session Secret (for authentication if implemented)
SESSION_SECRET=your-secret-key-here

# WebSocket Server URL (if using separate WebSocket service)
# Leave empty if using Supabase Realtime
VITE_WS_URL=
